<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Write">

    <Button
        android:id="@+id/TagDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:text="Write to Tag/Database"
        app:layout_constraintBaseline_toBaselineOf="@+id/rtomain"
        app:layout_constraintEnd_toStartOf="@+id/rtomain"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/rtomain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="145dp"
        android:text="Return to Main "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TagDB"
        app:layout_constraintTop_toTopOf="@+id/contentstatus"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/contentstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:dropDownWidth="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        android:layout_alignParentLeft="true"


        />

    <ScrollView

        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/writing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="140dp"
            android:text="Check"
            android:textSize="14sp" />

    </ScrollView>

    <TextView
        android:id="@+id/tagnotification"
        android:layout_width="198dp"
        android:layout_height="23dp"
        android:layout_marginTop="60dp"
        android:text="Notification will appear here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toEndOf="@+id/TagDB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentstatus" />


</androidx.constraintlayout.widget.ConstraintLayout>